
@{
    ViewBag.Title = "Cart Items";
}

<style>
    tr.header{
        font-weight:bold;
    }

    .quantity {
        width: 80px;
        text-align: right;
    }
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        margin-left: 7px;
    }

</style>

<h2>Cart Items</h2>

<table class="table">
    <tr class="header">
        <td align="center">Id</td>
        <td>Product Name</td>
        <td align="center">Unit</td>
        <td align="right">Price</td>
        <td align="right">Quantity</td>
        <td align="right">Total</td>
        <td></td>
    </tr>
    <tbody id="carts">
    </tbody>
</table>

<h4 class="row">
    Sum Total: <span id="sumtotal"></span>
</h4>

<div class="row">
    <div class="btn btn-info">Checkout</div>
    <div class="btn btn-danger" id="emptycart">Empty Cart</div>
</div>

<script>
    $(document).ready(function () {
        loadCartItems();

        $("#emptycart").click(function () {
            if (confirm("Are you sure to remove all items?")) {
                emptyCartItems();
                loadCartItems();
            }
        });
    });
</script>
